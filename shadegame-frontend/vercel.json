{
  "version": 2,
  "builds": [
    {
      "src": "shadegame-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "shadegame-frontend/build"
      }
    },
    {
      "src": "shadegame-frontend/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "shadegame-frontend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "shadegame-frontend/$1"
    }
  ]
}
